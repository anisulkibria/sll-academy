{{!< default}}
{{#post}}
<section class="page-content container px-8 xl:px-32 my-12">
    <div class="post-header">
        <div class="title text-3xl lg:text-4xl font-bold lg:leading-relaxed text-center text-secondary font-source my-6 px-16">{{title}}</div>
    </div>
    <div class="post-main my-8">
        <div class="main-content">
            <div class="content">
                {{content}}
            </div>
        </div>
    </div>
</section>
{{/post}}