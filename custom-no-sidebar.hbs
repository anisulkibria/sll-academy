{{!< default}}
{{#post}}
<section class="post-content container px-8 xl:px-32 my-12">
    <div class="post-header">
        <div class="title text-3xl lg:text-4xl font-bold lg:leading-relaxed text-center text-secondary font-source my-6 px-0 lg:px-16">{{title}}</div>
        <div class="meta-info flex items-center justify-between my-2 text-sm">
            <div class="author">
                By {{primary_author.name}}
            </div>
            <div class="primary-tag text-primary text-xs uppercase">
                <a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
            </div>
            <div class="published-date">
                {{date format="DD MMM YYYY"}}
            </div>
        </div>
    </div>
    <div class="post-main my-8 lg:px-36">
        <div class="main-content lg:col-span-3">
            <div class="feature-image mb-8">
                <img class="rounded-md" src="{{feature_image}}" alt="">
            </div> 
            <div class="content">
                {{content}}
            </div>
        </div>
    </div>
</section>
{{/post}}